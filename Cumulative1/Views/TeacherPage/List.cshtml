@model IEnumerable<Cumulative1.Models.Teacher>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f7f6;
        margin: 0;
        padding: 20px;
    }

    .container {
        max-width: 950px;
        margin: 0 auto;
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h1 {
        color: #333;
        font-size: 32px;
        text-align: center;
        margin-bottom: 20px;
    }

    .header-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .add-btn {
        padding: 10px 18px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.3s;
    }

        .add-btn:hover {
            background-color: #0056b3;
        }

    .filter-form {
        display: flex;
        gap: 20px;
        align-items: flex-end;
        flex-wrap: wrap;
        margin-bottom: 30px;
    }

        .filter-form div {
            display: flex;
            flex-direction: column;
        }

        .filter-form label {
            font-size: 14px;
            font-weight: bold;
            margin-bottom: 5px;
            color: #333;
        }

        .filter-form input[type="date"],
        .filter-form input[type="submit"] {
            padding: 8px;
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .filter-form input[type="submit"] {
            background-color: #4CAF50;
            color: white;
            font-weight: bold;
            border: none;
            cursor: pointer;
            margin-top: 24px;
        }

            .filter-form input[type="submit"]:hover {
                background-color: #45a049;
            }

    h3 {
        color: #333;
        font-size: 24px;
        margin-bottom: 15px;
        text-align: center;
    }

    .teacher-list {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .teacher-list th,
        .teacher-list td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: left;
            font-size: 16px;
        }

        .teacher-list th {
            background-color: #4CAF50;
            color: white;
            font-weight: bold;
        }

        .teacher-list tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .teacher-list tr:hover {
            background-color: #f1f1f1;
        }

    .teacher-name {
        color: #4CAF50;
        text-decoration: none;
    }

        .teacher-name:hover {
            text-decoration: underline;
        }
</style>

<div class="container">
    <div class="header-actions">
        <h1>Search Teachers by Hire Date</h1>
        <a href="/TeacherPage/New" class="add-btn">+ Add Teacher</a>
    </div>

    <form method="GET" action="/TeacherPage/List" class="filter-form">
        <div>
            <label for="StartDate">Start Date:</label>
            <input type="date" name="StartDate" required />
        </div>
        <div>
            <label for="EndDate">End Date:</label>
            <input type="date" name="EndDate" required />
        </div>
        <div>
            <input type="submit" value="Search" />
        </div>
    </form>

    <h3>Teacher List</h3>

    <table class="teacher-list">
        <thead>
            <tr>
                <th>Name</th>
                <th>Employee Number</th>
                <th>Hire Date</th>
                <th>Salary</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teacher in Model)
            {
                <tr>
                    <td>@teacher.TeacherFName @teacher.TeacherLName</td>
                    <td>@teacher.EmployeeNumber</td>
                    <td>@teacher.Hire.ToString("yyyy-MM-dd")</td>
                    <td>$@teacher.Salary.ToString()</td>
                    <td>
                        <a href="/TeacherPage/Show/@teacher.TeacherId" class="teacher-name">View Profile</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
